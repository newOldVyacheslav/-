"    else: print('Не может')\n","\n","  elif figure == 'Ладья':\n","    if any(\n","        (abs(delta_x == k) and delta_y == 0) or \\\n","        (delta_x == 0 and abs(delta_y == k)) \\\n","        for k in range(1,9)\n","        ):\n","      print('Может')\n","    else: print('Не может')\n","\n","  elif figure == 'Ферзь':\n","    if any(\n","        (abs(delta_x == k) and delta_y == 0) or \\\n","        (delta_x == 0 and abs(delta_y == k)) or \\\n","        (abs(delta_x) == k and abs(delta_y) == k) \\\n","        for k in range(1,9)\n","        ):\n","      print('Может')\n","    else: print('Не может')\n","\n","  elif figure == 'Король':\n","    if (abs(delta_x == 1) and delta_y == 0) or \\\n","      (delta_x == 0 and abs(delta_y == 1)) or \\\n","      (abs(delta_x) == 1 and abs(delta_y) == 1):\n","      print('Может')\n","    else: print('Не может')\n","\n","  else:\n","    print('Выбрана несуществующая фигура!')\n","    continue\n","\n","  break\n"],"metadata":{"id":"9IICo0p3F07P","colab":{"base_uri":"https://localhost:8080/"},"executionInfo":{"status":"ok","timestamp":1727189845527,"user_tz":-180,"elapsed":9922,"user":{"displayName":"Slagor","userId":"03320144618615022325"}},"outputId":"f28ba4fc-ddaf-4694-dd2d-6841b5367129"},"execution_count":7,"outputs":[{"output_type":"stream","name":"stdout","text":["Начальная координата X: 1\n","Начальная координата Y: 2\n","Конечная координата X: 3\n","Конечная координата Y: 4\n","Выберите фигуру: Пешка, конь, слон, ладья, ферзь, король\n","слон\n","Может\n"]}]},{"cell_type":"markdown","source":["# Практика 0.2.2\n","\n","**Цифра на определенном месте:**\n","\n","Последовательно записан натуральный ряд чисел.\n","\n","Какая цифра стоит в N позиции"],"metadata":{"id":"wI5bLNpHGDmO"}},{"cell_type":"code","source":["numbers = ''.join(input('Введите числа через пробел:\\n').split())\n","position = int(input('Введите позицию: '))\n","print(numbers[position-1])\n","\n"],"metadata":{"id":"XLm_zFGzGNsU","colab":{"base_uri":"https